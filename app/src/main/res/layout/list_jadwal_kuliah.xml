<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:layout_margin="8dp"
                                     app:cardElevation="4dp"
                                     android:id="@+id/cvKlik"
                                     app:cardCornerRadius="4dp">

<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <ImageView android:layout_width="50dp"
               android:layout_height="match_parent"
               android:src="@drawable/jadwal"/>
    <TextView android:layout_width="117dp"
              android:layout_height="match_parent"
              android:textSize="10dp"
              android:fontFamily="sans-serif-medium"
              android:gravity="center"
              android:text="Nama Dosen"
              android:id="@+id/listNamaJadwalDosen"
              android:layout_marginRight="8dp"
              android:textColor="@android:color/holo_green_light"/>
    <LinearLayout
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
        <TextView android:layout_width="match_parent"
                  android:layout_height="77dp"
                  android:textSize="17dp"
                  android:fontFamily="sans-serif-medium"
                  android:gravity="center"
                  android:text="jadwal"
                  android:id="@+id/listNamaJadwalHari"
                  android:textColor="@android:color/black"/>
                  android:textColor="@android:color/black"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="12dp"
                  android:fontFamily="sans-serif-medium"
                  android:gravity="center"
                  android:text="Nama MK"
                  android:id="@+id/listNamaJadwalMatakuliah"
                  android:textColor="@android:color/darker_gray"/>
    </LinearLayout>


    <View android:layout_width="5dp" android:layout_height="match_parent"
          android:background="@color/colorPrimary"/>

</LinearLayout>


</android.support.v7.widget.CardView>